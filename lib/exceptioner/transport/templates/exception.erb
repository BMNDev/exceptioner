<% if issue.exception %>
Application raised <%= issue.exception_name %> <%= issue.message %>
<% end %>
<% if issue.controller %>
 from <%= issue.controller_name %>#<%= issue.controller_action_name %>
<% end %>.

<% if issue.message %>
<%= Exceptioner::Transport::Helper.title('Error Message') %>
    <%= issue.message %>
<% end %>

<% if issue.backtrace %>
<%= Exceptioner::Transport::Helper.title('Backtrace') %>

        <%= issue.backtrace.join("\n\t") %>
<% end %>

<% if issue.params %>
<% issue.params.each_pair do |key, value| %>
<%= Exceptioner::Transport::Helper.title(key.to_s) %>

    <%= value.inspect %>

<% end %>
<% end %>

<% if issue.env %>
<%= Exceptioner::Transport::Helper.title('Environment') %>

        <%= Exceptioner::Transport::Helper.format_env(issue.env) %>
<% end %>
